<section>
  <h2>Update movie</h2>
  <form action="/ui/movie/update" method="post">
    <p>Provide <strong>either</strong> _id or movie_id</p>
    <input type="text" name="id" placeholder="_id (24-hex)">
    <input type="number" name="movie_id" placeholder="movie_id">
    <input type="text" name="movie_title" placeholder="new movie_title" required>
    <input type="text" name="Released" placeholder="new Released">
    <button type="submit">Update</button>
  </form>
</section>
